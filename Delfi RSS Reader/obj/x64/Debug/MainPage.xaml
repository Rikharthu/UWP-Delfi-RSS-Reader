<Page x:Class="Delfi_RSS_Reader.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="using:Delfi_RSS_Reader">
    <Page.DataContext>
        <local:RSSFeedViewModel />
    </Page.DataContext>

    <SplitView x:ConnectionId='1' x:Name="MySplitView"
               DisplayMode="CompactOverlay"
               IsPaneOpen="False"
               CompactPaneLength="50"
               OpenPaneLength="200">

        <SplitView.Pane>

            <StackPanel>
                <Button x:ConnectionId='2' x:Name="HamburgerButton"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE700;"
                        Width="50"
                        Height="50"
                        Background="Transparent"
                                                      />
                <StackPanel Orientation="Horizontal"
                            Height="50">
                    <Image Width="50"
                           Height="50"
                           Source="Assets/ic_book_black_24dp_1x.png" />
                    <TextBlock VerticalAlignment="Center"
                               FontWeight="Bold">
                        Kategorijas
                    </TextBlock>
                </StackPanel>
                <ListBox x:ConnectionId='3' x:Name="listBox"
                         Margin="50,0,0,0"
                         Height="500"
                         ItemsSource="{Binding Items}"
                         HorizontalAlignment="Left"
                         SelectionMode="Multiple"
                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                                                                     />
            </StackPanel>

        </SplitView.Pane>

        <SplitView.Content>

            <Grid x:ConnectionId='4' Background="#FFFFFFFF"
                  x:Name="TheCanvas">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="480" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />

                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Height="50"
                            Orientation="Horizontal">

                    <TextBlock Text="{Binding Title}"
                               FontWeight="Bold"
                               FontSize="32"
                               Margin="16,0,16,0" />

                    <Button x:ConnectionId='8' x:Name="Button1"
                            VerticalAlignment="Stretch"
                                                 
                            Margin="0,0,0,-0.2"
                            Width="32"
                            Height="32"
                            FocusVisualPrimaryBrush="{x:Null}">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Assets/ic_refresh_black_24dp.png" />
                        </Button.Background>
                    </Button>


                </StackPanel>


               
                    <Grid Background="#eeeeee"
                          Grid.Column="0"
                          Grid.Row="1">
                        <ListView x:ConnectionId='6'
                                                                       
                            Name="FeedListView"
                            ItemsSource="{Binding FilteredItems}"
                            HorizontalContentAlignment="Stretch">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Border CornerRadius="4"
                                            Background="White"
                                            BorderBrush="White"
                                            BorderThickness="1"
                                            Margin="2,6,2,6"
                                            Padding="10">

                                    <StackPanel Orientation="Vertical">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding PubDate}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Category}"/>
                                        </Grid>
                                        <TextBlock TextAlignment="Center"
                                                   Text="{Binding Title}"
                                                   FontWeight="Bold"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding PlainTextDescription}"
                                                   TextAlignment="Left"
                                                   Margin="0,6,0,0"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                    </Border>

                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                        <ProgressRing x:ConnectionId='7' Name="LoadingProgressRing"
                                      Width="60"
                                      Height="60"
                                      Foreground="Black" />

                    </Grid>



                <Frame x:ConnectionId='5' Name="detailsFrame"
                       Grid.Column="1"
                       Grid.Row="1"></Frame>

            </Grid>

        </SplitView.Content>

    </SplitView>


</Page>

